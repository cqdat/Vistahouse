@model NhomXingfa.Models.ProductViewModel
@{
    if (Model.isAll == false)
    {
        ViewBag.Title = Model.category.CategoryName;
    }
    else
    {
        ViewBag.Title = "Tất cả sản phẩm";
    }

}

@section metatags
{
    <meta name="keywords" content="@Model.SEOKeywords" />
    <meta name="description" content="@Model.SEOMetadescription" />
}



<div class="hero-wrap hero-bread" style="background-image: url('/images/bg_1.jpg');">
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center fadeInUp ftco-animated">
                <p class="breadcrumbs"><span class="mr-2"><a href="/">Trang chủ</a></span> <span></span></p>
                <h1 class="mb-0 bread">@ViewBag.Title</h1>
            </div>
        </div>
    </div>
</div>

@Html.Partial("_index", Model)



@section scripts
{
    <script>
        $(document).ready(function () {

            $(".pull-right li").removeClass("active");

            $(".pull-right li#menusp").addClass("active");

        });
    </script>
}